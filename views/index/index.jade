// 首页
extends ../layout/site_layout

block site_view
  link(rel='stylesheet', href='/stylesheets/index.css')
  .guanggao
    img(src="/images/guanggao.jpg" class="ggleft")
    img(src="/images/guanggao2.jpg" class="ggright")
  .business_type_bar.clearfix
    a(style="float:left;",href="javascript:void(0)")#toLeft
      img(style="width:14px;height:10px;margin-left:5px;",src="/images/images/disable_left.png")
    div(style="overflow:hidden;width:95%;float:left;margin-left:10px;")#bar
      ul#business_type_bar(style="float:left")
    a#toRight(href="javascript:void(0)")
      img(src="/images/images/disable_right.png",style="width:10px;height:10px;")
  .sy_contentbox.clearfix
    .left_cont
      table(cellpadding="0",cellspacing="0",border="0").tabbedtable#extension_user_list
        tr
          th(width="110").center 头像
          th(width="") 昵称
          th 广告词
          th 业务信息
          th

      a(href="javascript:void(0)").view_more.center 查看更多
    .right_cont
      ul#notice
        li.title
          b 网站公告
  script(type="text/javascript",src=base_path+"/javascripts/business/index.js")

